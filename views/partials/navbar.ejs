<nav>
  <a href="/"><h1>User Management</h1></a>

  <% if (locals.isIndex) { %>

  <form action="/search" method="GET" class="search">
    <section class="searchbar">
      <label for="search"><span class="icon magnifying-glass"></span></label>
      <input
        type="text"
        name="search"
        id="search"
        value="<%= locals.search || '' %>"
        placeholder="Search by name or email"
        required
      />
      <a href="/"><span class="icon clear" title="Clear"></span></a>
    </section>

    <button type="submit">Search</button>
  </form>

  <a href="/create">
    <section class="add-user-wrapper">
      <p>Add User</p>
      <span class="icon add-user" title="Add User"></span>
    </section>
  </a>
  <% } %>
</nav>
